@using PoliceDepartment.EvidenceManager.SharedKernel.ViewModels;
@model EvidenceDetailViewModel;

@{
    ViewData["Title"] = "Evidence Details";
}

<!--TODO: CREATE IMAGE LAYOUT-->

<div>
    <h4>Evidence @Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <img src="@Model.ImageUrl" alt="@Model.Name" />
    <dl class="row">
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<hr />
<div>
    <a class="btn btn-primary" href="#">Edit</a>
    <a class="btn btn-secondary" href="@Context.Request.Query["returnUrl"].ToString()">Go back to case</a>
</div>