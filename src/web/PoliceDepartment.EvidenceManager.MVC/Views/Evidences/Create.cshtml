@model CreateEvidencePageViewModel

@{
    ViewData["Title"] = "Create Evidence";
}

<h1>Create Evidence</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form asp-action="PostCreate" method="post" enctype="multipart/form-data" asp-route-returnUrl="@Context.Request.Query["returnUrl"].ToString()">
                <input asp-for="CaseId" type="hidden" value="@ViewBag.CaseId" />
                <input asp-for="OfficerId" type="hidden" value="@ViewBag.OfficerId" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control" aria-required="true" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" aria-required="true"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image">Image</label>
                    <input asp-for="Image" type="file" accept="image/png" class="form-control" aria-required="true" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <hr />
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a class="btn btn-secondary" asp-controller="Cases" asp-action="Details" asp-route-id="@ViewBag.CaseId">Cancel</a>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}