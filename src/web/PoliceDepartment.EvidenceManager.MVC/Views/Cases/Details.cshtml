@using PoliceDepartment.EvidenceManager.SharedKernel.ViewModels;
@model CaseViewModel

@{
    ViewData["Title"] = "Case Details";
}

<div>
    <h4>Case @Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Created at
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
    </dl>
</div>
<hr />
<partial name="../Shared/Evidences/_ListEvidencesPartial.cshtml" model="Model"/>
<hr />
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Go back to list</a>
</div>
